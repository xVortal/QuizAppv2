<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
    android:id="@+id/QuestionTextView"
    android:layout_width="336dp"
    android:layout_height="200dp"
    android:layout_marginStart="37dp"
    android:layout_marginLeft="37dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="37dp"
    android:layout_marginRight="37dp"
    android:layout_marginBottom="100dp"
    android:background="#D4648D"
    android:gravity="center"
    android:text="Quizify"
    android:textColor="#FFFFFF"
    android:textSize="36sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.355"
    tools:layout_editor_absoluteX="37dp"
    tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/AnswerABtn"
        android:layout_width="202dp"
        android:layout_height="134dp"
        android:layout_marginTop="50dp"
        android:text="Button"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="271dp"
        app:layout_constraintTop_toBottomOf="@+id/QuestionTextView" />

    <Button
        android:id="@+id/AnswerBBtn"
        android:layout_width="202dp"
        android:layout_height="134dp"
        android:text="Button"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="284dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@+id/AnswerABtn"
        app:layout_constraintTop_toBottomOf="@+id/QuestionTextView" />

    <Button
        android:id="@+id/AnswerCBtn"
        android:layout_width="202dp"
        android:layout_height="134dp"
        android:text="Button"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="451dp"
        app:layout_constraintTop_toBottomOf="@+id/AnswerABtn" />

    <Button
        android:id="@+id/AnswerDBtn"
        android:layout_width="202dp"
        android:layout_height="134dp"
        android:text="Button"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="445dp"
        app:layout_constraintTop_toBottomOf="@+id/AnswerBBtn"
        app:layout_constraintLeft_toRightOf="@+id/AnswerCBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>