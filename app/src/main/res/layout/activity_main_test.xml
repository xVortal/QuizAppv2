<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTestActivity"
    android:background="@drawable/bildschirmhintergrund">


 <TextView
     android:id="@+id/QuestionTextView"
     android:layout_width="336dp"
     android:layout_height="200dp"
     android:layout_marginStart="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginTop="60dp"
     android:layout_marginEnd="8dp"
     android:layout_marginRight="8dp"
     android:background="#D4648D"
     android:gravity="center"
     android:text="Quizify"
     android:textColor="#FFFFFF"
     android:textSize="36sp"
     android:autoSizeTextType="uniform"
     android:autoSizeMinTextSize="12sp"
     android:autoSizeMaxTextSize="36sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <Button
     android:id="@+id/AnswerABtn"
     android:layout_width="160dp"
     android:layout_height="90dp"
     android:layout_marginTop="16dp"
     android:background="@drawable/rounded_button_corners"
     android:text="Button"
     android:autoSizeMinTextSize="12sp"
     android:autoSizeMaxTextSize="100sp"
     app:layout_constraintEnd_toStartOf="@+id/AnswerBBtn"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/QuestionTextView" />

 <Button
     android:id="@+id/AnswerBBtn"
     android:layout_width="160dp"
     android:layout_height="90dp"
     android:layout_marginTop="16dp"
     android:background="@drawable/rounded_button_corners"
     android:text="Button"
     android:autoSizeMinTextSize="12sp"
     android:autoSizeMaxTextSize="100sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toEndOf="@+id/AnswerABtn"
     app:layout_constraintTop_toBottomOf="@+id/QuestionTextView" />

 <Button
     android:id="@+id/AnswerCBtn"
     android:layout_width="160dp"
     android:layout_height="90dp"
     android:layout_marginTop="8dp"
     android:background="@drawable/rounded_button_corners"
     android:text="Button"
     android:autoSizeMinTextSize="12sp"
     android:autoSizeMaxTextSize="100sp"
     app:layout_constraintEnd_toStartOf="@+id/AnswerDBtn"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/AnswerABtn" />

 <Button
     android:id="@+id/AnswerDBtn"
     android:layout_width="160dp"
     android:layout_height="90dp"
     android:layout_marginTop="8dp"
     android:background="@drawable/rounded_button_corners"
     android:text="Button"
     android:autoSizeMinTextSize="12sp"
     android:autoSizeMaxTextSize="100sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toEndOf="@+id/AnswerCBtn"
     app:layout_constraintTop_toBottomOf="@+id/AnswerBBtn" />

 <Button
     android:id="@+id/nextQuestionBtn"
     android:layout_width="150dp"
     android:layout_height="67dp"
     android:layout_marginTop="16dp"
     android:layout_marginBottom="8dp"
     android:text="->"
     android:background="#CBD317E8"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/AnswerCBtn" />

 <ImageButton
     android:id="@+id/home"
     android:layout_width="58dp"
     android:layout_height="53dp"
     android:layout_marginStart="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginTop="6dp"
     android:background="#0693D6"
     android:backgroundTint="@android:color/transparent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:srcCompat="@drawable/baseline_home_black_18" />

 <ProgressBar
     android:id="@+id/progressBar"
     style="?android:attr/progressBarStyleHorizontal"
     android:layout_width="280dp"
     android:layout_height="23dp"
     android:layout_marginBottom="8dp"
     app:layout_constraintBottom_toTopOf="@+id/QuestionTextView"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>