<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bildschirmhintergrund">

    <TextView
        android:id="@+id/richtig"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="richtig beantwortet:"
        app:layout_constraintBottom_toTopOf="@+id/falsch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/falsch"
        android:layout_width="130dp"
        android:layout_height="30dp"

        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="falsch beantwortet:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/richtig" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="nicht bestanden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StatisticBar" />

    <TextView
        android:id="@+id/anzahlRichtig"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="3/7"
        app:layout_constraintEnd_toStartOf="@+id/prozentRichtig"
        app:layout_constraintStart_toEndOf="@+id/richtig"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anzahlFalsch"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="3/7"
        app:layout_constraintEnd_toStartOf="@+id/prozentFalsch"
        app:layout_constraintStart_toEndOf="@+id/falsch"
        app:layout_constraintTop_toBottomOf="@+id/anzahlRichtig" />

    <TextView
        android:id="@+id/prozentRichtig"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="90%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/anzahlRichtig"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prozentFalsch"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="90%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/anzahlFalsch"
        app:layout_constraintTop_toBottomOf="@+id/prozentRichtig" />

    <ProgressBar
        android:id="@+id/StatisticBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="242dp"
        android:layout_height="53dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/falsch" />


</androidx.constraintlayout.widget.ConstraintLayout>